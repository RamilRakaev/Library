@page
@model Library.Pages.LibrarianContent.GiveBookModel
@{
}
<div class="container">
    <main role="main" class="pb-3">
        <br />
        <div class="row justify-content-start">
            <div class="col-lg-3 col-md-3">
                <br />
                <a asp-page="LibrarianMain" class="btn btn-warning">Назад</a>
            </div>
            <div class="col-lg-6 col-md-6">
                <form method="post">
                    <input type="hidden" asp-for="@Model.Book.Id" name="idBook" />
                    <input type="hidden" asp-for="@Model.Account.Id" name="idAccount" />
                    <div class="form-group">
                        <label>Срок бронирования</label>
                        <input class="form-control" type="number" asp-for="@Model.DaysBookint" name="days" />
                    </div>
                    <div class="form-group">
                        <input class="btn btn-danger" type="submit" value="Отдать книгу" />
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>