@page
@model Library.Pages.LibrarianContent.PayFineModel
@{
}
<div class="container">
    <main role="main" class="pb-3">
        <br />
        <div class="row justify-content-md-start">
            <div class="col-lg-3 col-md-3">
                <a asp-page="LibrarianMain" class="btn btn-warning">Назад</a>
            </div>
            <div class="col-lg-5 col-md-5">
                <form method="post">
                    <div class="form-group">
                        <h3 style="width:100%">@Model.Account.Name</h3>
                        <p>Размер штрафа составляет: @Model.Account.Penalty</p>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Account.Id" name="idAccount" />
                        <label style="width:100%" >Погасить штраф на</label>
                        <input style="width:100%" type="text" name="pay"/>
                    </div>
                    <input class="btn btn-info" type="submit" value="Погасить"/>
                </form>
            </div>
        </div>
    </main>
</div>